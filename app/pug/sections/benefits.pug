include ../bem/index
include ../helpers/config
include ../helpers/mixins
-
	var benefitClass = '_center col-12 col-sm-6 col-md-4';
	var benefits = [
		{
			image: 'img/icon-benefit-1.svg',
			content: 'Комфортные номера с ТВ и горячей/холодной водой. По 2-3 человека в номере'
		},
		{
			image: 'img/icon-benefit-2.svg',
			content: '4-разовое сбалансированное питание. Только свежие европейские продукты и никаких снеков'
		},
		{
			image: 'img/icon-benefit-3.svg',
			content: 'Пешие и автобусные экскурсии по близлежащим городам и местностям'
		},
		{
			image: 'img/icon-benefit-4.svg',
			content: 'Ежедневные активности: гимнастика, караоке, просмотр фильмов, спорт'
		},
		{
			image: 'img/icon-benefit-5.svg',
			content: 'Внимательный персонал, который уже Х-й год работает с детьми из Украины'
		},
		{
			image: 'img/icon-benefit-6.svg',
			content: 'Изучение польского языка для будущего поступления в польский лицей/колледж'
		}
	];

+b.SECTION.benefits._camp
	+quadro('_style-1 benefits__quadro_1')
	+quadro('_style-2 benefits__quadro_2')
	.container
		+b.H3.title-md.title-section В каждом из лагерей ребенка ждут:
		.row
			each benefit in benefits
				+icon(benefitClass, benefit.image, null)
					p=benefit.content